{
  "version": "1.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test: current file",
      //"env": { "NODE_ENV": "test" },
      "program": "${workspaceFolder}/node_modules/.bin/react-scripts",
      "args": [
        "test",
        "--watchAll=false",
        "--coverage",
        "${fileBasenameNoExtension}"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test: all files",
      //"env": { "NODE_ENV": "test" },
      "program": "${workspaceFolder}/node_modules/.bin/react-scripts",
      "args": [
        "test",
        "--watchAll=false",
        "--coverage"
      ],
      "console": "integratedTerminal"
    }
  ]
}